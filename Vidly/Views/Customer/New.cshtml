@model Vidly.Models.Customer
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextAreaFor(m => m.Name, new { @class = "form-control" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.Birthdate)
        @Html.TextAreaFor(m => m.Birthdate, new { @class = "form-control" })
    </div>

    <div class="checkbox">
        <label>
            @Html.TextAreaFor(m => m.IsSubscribedToNewsLetter) Subscribe to Newsletter?
        </label>
        
    </div>


}

